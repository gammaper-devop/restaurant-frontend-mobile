# Development API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api
EXPO_PUBLIC_API_URL=http://localhost:3000

# For testing on physical device, replace localhost with your computer's IP
# Find your IP with: ipconfig getifaddr en0 (Mac) or ipconfig (Windows)
# EXPO_PUBLIC_API_BASE_URL=http://192.168.1.XXX:3000/api

# App Configuration
EXPO_PUBLIC_APP_NAME=RestaurantOS Dev
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# Debug Settings
EXPO_PUBLIC_ENABLE_DEBUG=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_SHOW_DEBUG_INFO=true

# Features
EXPO_PUBLIC_ENABLE_MOCK_DATA=true
EXPO_PUBLIC_OFFLINE_MODE=false